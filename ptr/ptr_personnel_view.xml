<openerp>
	<data>
		<record id="ptr_personnel_form_view" model="ir.ui.view">
            <field name="name">ptr.personnel.form</field>
            <field name="model">ptr.personnel</field>
            <field name="arch" type="xml">
                <form string="personnel" version="7.0">
					<sheet>
						<field name="image" widget="image" class="oe_left oe_avatar" />
						<div class="oe_title">
							<h2> 
								<label for="matricule" class="oe_edit_only" />
								<field name="matricule"/> 
							</h2>
						</div>
						<group  col ="4">
							<separator string ="Generale Info" colspan="4"/>
									<field name="nom" colspan="1"/> 
									<field name="prenom" colspan="1"/> 
									<field name="fonction" colspan="1"/> 
									<field name="tel" colspan="1"/> 
									<field name="fax" colspan="1"/> 
									<field name="email" help="exemple : nomUser@gmail.com" colspan="1"/> 
									<field name="categorie" colspan="1"/> 
						</group>
						<notebook >
							<page string="Patrimoin actif affecte">
								<field name="ptractif_ids" mode="tree"/> 
							</page>
						</notebook> 
					</sheet>     
                </form>
            </field>
        </record>
		
		<record id="ptr_personnel_tree_view" model="ir.ui.view">
            <field name="name">ptr.personnel.tree</field>
            <field name="model">ptr.personnel</field>
            <field name="arch" type="xml">
                <tree string="Liste Personnel"  toolbar="1"  version="7.0">
					<field name="matricule"/> 
					<field name="nom" /> 
					<field name="prenom" /> 
					<field name="fonction"/> 
					<field name="tel" /> 
					<field name="fax" /> 
					<field name="email"/> 
					<field name="categorie"/> 
                </tree>
            </field>
        </record>
		<record model ="ir.actions.act_window" id="ptr_personnel_act">
			<field name="name">Liste Personnel</field>
			<field name="res_model">ptr.personnel</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
		</record>
		<menuitem id="ptr_personnel_menu" name="Personnel" parent="ptr_recapitul_menu" action="ptr_personnel_act"/>

	</data>
</openerp>