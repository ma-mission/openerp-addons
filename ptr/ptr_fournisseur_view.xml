<openerp>
	<data>
		<record model="ir.ui.view" id="ptr_fournisseur_kanban_view">
		<field name="name">ptr.fournisseur.kanban</field>
		<field name="model">ptr.fournisseur</field>
		<field name="arch" type="xml">
			<kanban>
				<templates>
					<t t-name="kanban-box">
						<div class="oe_fournisseur_vignette">
							<div class="oe_fournisseur_image">
								<a type="open"><img t-att-src="kanban_image('ptr.fournisseur', 'image', record.id.value)" class="oe_fournisseur_picture"/></a>
							</div>
							<div class="oe_fournisseur_details">
								<h4>
									<a type="open">
										<field name="code"/>
									</a>
								</h4>
								<ul>
								</ul>
							</div>
						</div>
						<script>
						$('.oe_fournisseur_picture').load(function() { if($(this).width() > $(this).height()) { $(this).addClass('oe_fournisseur_picture_wide') } });
						</script>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	
	<record id="ptr_fourniseur_form_view" model="ir.ui.view">
            <field name="name">ptr.fournisseur.form</field>
            <field name="model">ptr.fournisseur</field>
            <field name="arch" type="xml">
                <form string="fournisseur" version="7.0">
					<sheet>
						<field name="image" widget="image" class="oe_left oe_avatar" />
						<div class="oe_title">
							<h2> 
								<label for="code" class="oe_edit_only" />
								<field name="code"/> 
							</h2>
						</div>
						<notebook >
							<page string="Informations">
								<group>
			                    <field name="denomination"/> 
								<field name="adresse"/> 
								<field name="tel"/> 
								<field name="fax"/> 
								<field name="nom_resp"/> 
								<field name="prenom_resp"/> 
								<field name="email"/> 
								<field name="GSM1"/> 
								<field name="GSM2"/>
								</group>
							</page>

						</notebook> 
					</sheet>     
                </form>
            </field>
        </record>
		
		<record id="ptr_fournisseur_tree_view" model="ir.ui.view">
            <field name="name">ptr.fournisseur.tree</field>
            <field name="model">ptr.fournisseur</field>
            <field name="arch" type="xml">
                <tree string="fournisseur" version="7.0">
					<field name="code" /> 
                    <field name="denomination"/> 
					<field name="adresse"/> 
					<field name="tel"/> 
					<field name="fax"/> 
					<field name="nom_resp"/> 
					<field name="prenom_resp"/> 
					<field name="email"/> 
					<field name="GSM1"/> 
					<field name="GSM2"/> 
                </tree>
            </field>
        </record>
		
		<record model ="ir.actions.act_window" id="ptr_fournisseur_act">
			<field name="name">Fournisseur</field>
			<field name="res_model">ptr.fournisseur</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,kanban</field>
			<field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new record.
              </p>
            </field>
		</record>
		<menuitem id="ptr_fournisseur_menu" name="Fournisseur" parent="ptr_recapitul_menu" action="ptr_fournisseur_act"/>

	</data>
</openerp>