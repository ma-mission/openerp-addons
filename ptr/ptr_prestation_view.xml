<openerp>
	<data>
	<record id="ptr_prestation_supplier_form" model="ir.ui.view">
					<field name="name">ptr.prestation.supplier.form</field>
					<field name="model">ptr.prestation</field>
					<field name="arch" type="xml">
						<form string="prestation" version="7.0">
							<div class="oe_title">
								<h2> 
									<label for="code" class="oe_edit_only" />
									<field name="code"/> 
								</h2>
							</div>
							<notebook >
								<page string="Informations">
									<group>
										<field name="libelle"/>   
										<field name="prestataire"/> 
										<field name="dateprestation"/> 
										<field name="volh"/> 
										<field name="cout"/> 
									</group>
								</page>
								<page string="Reglements">
									<field name="reglement_ids">
										<tree string="Reglement"  toolbar="1"  version="7.0" editable="bottom" create="1" >
											<field name="code" /> 
											<field name="neffet"/>
											<field name="dateeffet"/>
											<field name="datereglement"/>   
											<field name="modepaiement"/> 
											<field name="banque"/>
											<field name="montant" sum="Montant Total ttc" />  
										</tree>
									</field>
								</page>
							</notebook>
								    
						</form>
					</field>
	</record>
		
		<record id="ptr_prestation_tree_view" model="ir.ui.view">
            <field name="name">ptr.prestation.tree</field>
            <field name="model">ptr.prestation</field>
            <field name="arch" type="xml">
                <tree string="Prestation"  toolbar="1"  version="7.0" colors="red:statut=='Imapyee';orange:statut=='Payee Partielle';green:statut=='Payee Totale'" >
					<field name="code" /> 
					<field name="libelle"/>   
					<field name="prestataire"/> 
					<field name="dateprestation"/> 
					<field name="statut"/>
					<field name="volh" sum="Volume Horaire"/> 
					<field name="cout" sum="Montant Total ttc"/> 
                </tree>
            </field>
        </record>
		
		<record model ="ir.actions.act_window" id="ptr_prestation_act">
			<field name="name">Prestation</field>
			<field name="res_model">ptr.prestation</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
			<field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new record.
              </p>
            </field>
		</record>
		
		<menuitem id="ptr_prestation_menu" name="Prestation" parent="ptr_recapitul_menu" action="ptr_prestation_act"/>		
	</data>
</openerp>