<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_hr_grade" model="ir.actions.act_window">
            <field name="res_model">hr.grade</field>
            <field name="view_type">form</field>
            <field name="name">Grades</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_employee_grade_tree" model="ir.ui.view">
            <field name="name">hr.employee.grade.tree</field>
            <field name="model">hr.employee.grade</field>
            <field name="arch" type="xml">
		    <tree string="Employee Grades"
		      colors="blue:state=='draft';green:state=='proposal';gray:state=='old'">
                    <field name="grade_id"/>
                    <field name="echelon"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
		    <field name="state" invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="view_employee_grade_form" model="ir.ui.view">
            <field name="name">hr.employee.grade.form</field>
            <field name="model">hr.employee.grade</field>
            <field name="arch" type="xml">
                <form string="Employee Grades">
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="grade_id"/>
                            <field name="echelon"/>
                            <field name="index"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_employee_inherit_grade_form" model="ir.ui.view">
            <field name="name">hr.employee.inherit.grade.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                    <page string="HR Settings" position="before">
                        <page string="Career Information">
                                <field name="employee_grade_ids">
<!--
                                    <tree editable="bottom">
                                        <field name="grade_id"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                    </tree>
-->
                                </field>
                        </page>
                    </page>
            </field>
        </record>

        <record id="view_employee_tree" model="ir.ui.view">
            <field name="name">hr.employee.tree_grade</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="name" position="after">
                        <field name="grade_id"/>
                        <!--field name="grade_id" invisible="1"/-->
                    </field>
                </data>
            </field>
        </record>

        <record id="view_employee_filter" model="ir.ui.view">
            <field name="name">hr.employee.filter_grade</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <data>
                    <group string="Group By..." position="inside">
                        <filter string="Grade" domain="[]" context="{'group_by':'grade_id'}"/>
                    </group>
                </data>
            </field>
        </record>


        <menuitem action="action_hr_grade" id="hr_menu_grade" name="Grades" parent="hr.menu_hr_configuration" groups="base.group_no_one"/>

    </data>
</openerp>
