<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
    <record id="view_study_form" model="ir.ui.view">
            <field name="name">rh.study.form</field>
            <field name="model">rh.study</field>
            <field name="arch" type="xml">
                <form string="study" version="7.0">
					
					<sheet>
						<label string="Niveau de qualification" class="oe_edit_only"/>
						<h2>
							<field name="qualification_id"/>
						</h2>
						<group>
							<group >
								<field name="employe_id" />
								<field name="date"/>
							</group>
							<group >	
								<field name="et_type_id"  />
								<field name="ville_id"/>
							</group>
							<group >
								<field name="support"/>
							</group >
							
						</group>
					</sheet>
				</form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_study_tree">
        <field name="name">rh.study.tree</field>
        <field name="model">rh.study</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Qualifications" >
				<field name="qualification_id"/>
				<field name="date"/>
				<field name="et_type_id"  />
				<field name="ville_id"  />
				<field name="support"  />
			</tree>
        </field>
    </record>
	<record model="ir.actions.act_window" id="act_study_view">
        <field name="name">Studies</field>
        <field name="res_model">rh.study</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
		<field name="help" type="html"><p class="oe_view_nocontent_create">Click to define a new record.</p></field>
    </record>
	
  
	<menuitem name="Etudes et qualifications" id="menu_etude_qualification" parent="menu_base_donnee" action="act_study_view" />
  
 
</data>
</openerp>