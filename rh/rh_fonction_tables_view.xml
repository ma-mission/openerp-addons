		<field name="name">rh.fonction.category.form</field>
		<field name="model">rh.fonction.category</field>
		<field name="arch" type="xml">
			<form string="Categories" version="7.0">
				<notebook>
					<page string="Category">
						<group>
							<field name="name"/>
							<field name="code"/>
						</group>
						<group string="Corps">
							<field name="corps_ids" nolabel="1"/>
						</group>
					</page>
				</notebook>
			</form>
        </field>
    </record> 
