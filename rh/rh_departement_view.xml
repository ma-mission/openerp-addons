<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
	<record model="ir.ui.view" id="view_departement_kanban">
        <field name="name">rh.departement.kanban</field>
        <field name="model">rh.departement</field>
        <field name="arch" type="xml">
            <kanban>
				<templates>
                    <t t-name="kanban-box">
                        <div class="oe_grh_vignette">
							<div class="oe_grh_image">
								<a type="open"><img t-att-src="kanban_image('rh.departement', 'logo', record.id.value)" class="oe_grh_picture"/></a>
							</div>
							<div class="oe_grh_details">
								<h4>
									<a type="open">
										<field name="name"/>
										<t t-if="record.name.raw_value"></t>
									</a>
								</h4>
								
							</div>
						</div>
                        <script>
						$('.oe_grh_picture').load(function() { if($(this).width() > $(this).height()) { $(this).addClass('oe_grh_picture_wide') } });
						</script>
                    </t>
                </templates>
            </kanban>

        </field>
    </record>
    <record id="view_departement_form" model="ir.ui.view">
            <field name="name">rh.departement.form</field>
            <field name="model">rh.departement</field>
            <field name="arch" type="xml">
                <form string="Departement" version="7.0">
					<sheet>
						<field name="logo" widget='image' class="oe_left oe_avatar"/>
						<div class="oe_title">
							<label for="name" class="oe_edit_only"/>
							<h2>
								<field name="name" required="1"/>
							</h2>
							<group>	
								<field name="etablissement_id"  widget="selection" required="1"/>
								<field name="code"  />
								
							</group>
						</div>
						<notebook>
							
							<field name="notes" placeholder="Other Information ..." colspan="4"/>
						</notebook>
					</sheet>
				</form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_departement_tree">
        <field name="name">rh.departement.tree</field>
        <field name="model">rh.departement</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Departement" >
				<field name="name"/>
				<field name="code"/>
				</tree>
        </field>
    </record>
	<record model="ir.actions.act_window" id="act_departement_view">
        <field name="name">Departements</field>
        <field name="res_model">rh.departement</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
		<field name="view_id" ref="view_departement_kanban"/>
		<field name="help" type="html"><p class="oe_view_nocontent_create">Click to define a new record.</p></field>
    </record>
	
	
	<menuitem name="Departements" id="menu_departements" parent="menu_referentiel_structures" action="act_departement_view"/>
	
	    
</data>
</openerp>