<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data noupdate="1">
    <!-- Sequ--> 
        <record id="seq_type_rh_ordre_mission" model="ir.sequence.type">
            <field name="name">Ordre de mission</field>
            <field name="code">rh.ordre_mission_seq</field>
        </record>
        <record id="seq_rh_ordre_mission" model="ir.sequence">
            <field name="name">Ordre de mission</field>
            <field name="code">rh.ordre_mission_seq</field>
            <field name="prefix">OM</field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>
</data>
<data>
    <record id="view_ordre_mission_form" model="ir.ui.view">
            <field name="name">rh.ordre_mission.form</field>
            <field name="model">rh.ordre_mission</field>
            <field name="arch" type="xml">
                <form string="Ordre de mission" version="7.0">
					<header >
						<button name="om_validate" string="Print document" states="draft" type="object" class="oe_highlight"/>
						<button name="confirm" string="Confirm" states="validated" type="workflow" class="oe_highlight" />
						<button name="paid" string="Paid" states="confirmed" type="workflow" class="oe_highlight"/>
						
						
						<button string="Print document" name="om_print_report" states="validated,confirmed"  type="object" />
						<button string="Activate" name="om_activate" states="canceled"    type="object" />
						<button string="Cancel" name="om_cancel" states="draft,validated,confirmed"    type="object" />
						<field name="state" widget="statusbar" statusbar_visible="draft,validated,confirmed,payed" />
					</header>
					<sheet>
						<label for="doc_ref" class="oe_edit_only"/>
						<h2>
							<field name="doc_ref"/>
						</h2>
						<group>
							<group colspan="4">
								<field name="employe_ids" widget="many2many_list" nolabel="1"/>
									
							</group>
							<group >
								<field name="destination_id"  />	
								<field name="date_depart"  />
								<field name="date_retour"  />
								<field name="nombre_de_jour"  />
							</group>
							<group >
								<field name="mission"/>
								<field name="moyen_transport_id"/>
								<field name="prise_en_charge"/>
								
								
							</group >
							
								<field name="notes" placeholder="Other Information ..." colspan="4"/>
							
						</group>
					</sheet>
				</form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_ordre_mission_tree">
        <field name="name">rh.ordre_mission.tree</field>
        <field name="model">rh.ordre_mission</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Ordres de mission" >
				<field name="doc_ref"/>
				<field name="employe_ids"/>
				<field name="date_depart"/>
				<field name="date_retour"  />
				<field name="nombre_de_jour"  />
				<field name="mission"  />
				<field name="state"  />
			</tree>
        </field>
    </record>
	<record model="ir.actions.act_window" id="act_ordre_mission_view">
        <field name="name">Ordres de mission</field>
        <field name="res_model">rh.ordre_mission</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
		<field name="help" type="html"><p class="oe_view_nocontent_create">Click to define a new record.</p></field>
    </record>
	
  
	<menuitem name="Ordres de Mission" id="menu_ordre_mission" parent="rh_menu" action="act_ordre_mission_view" />
  
 
</data>
</openerp>