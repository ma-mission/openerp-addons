<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data noupdate="1">
    <!-- Sequ--> 
        <record id="seq_type_demande" model="ir.sequence.type">
            <field name="name">Demande</field>
            <field name="code">rh.demande_seq</field>
        </record>
        <record id="seq_demande" model="ir.sequence">
            <field name="name">Demande</field>
            <field name="code">rh.demande_seq</field>
            <field name="prefix">DA</field>
            <field name="padding">6</field>
            <field name="suffix">USMS</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
	<data>
		<record model="ir.ui.view" id="act_demande_calendar">
			<field name="name">rh.demande.calendar</field>
			<field name="model">rh.demande</field>
			<field name="type">calendar</field>
			<field name="arch" type="xml">
				<calendar string="Demandes" date_start="date" color="demande">
					<field name="employe_id" widget="selection"/>
				</calendar>
			</field>
		</record>
		
	
		<record model="ir.ui.view" id="act_demande_form">
			<field name="name">rh.demande.form</field>
			<field name="model">rh.demande</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Demandes" version="7.0">
					<sheet>
						<label for="doc_ref"/><field name="doc_ref" readonly="1"/>
						<label for="employe_id"/><field name="employe_id"/>
						<label for="demande"/><field name="demande"/>
						<label for="date"/><field name="date" />
						<label for="start_date"/><field name="start_date"/>
						<label for="end_date"/><field name="end_date"/>
						<label for="reason"/><field name="reason"/>
						<label for="adress"/><field name="adress"/>
						<label for="state"/><field name="state"/>
						<footer>
							<button name="print_report" string="Print" type="object" icon="gtk-print"/>
						</footer>
					</sheet>
				</form>
			</field>
		</record>
	<record model="ir.ui.view" id="act_demande_tree">
			<field name="name">rh.demande.tree</field>
			<field name="model">rh.demande</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Employes Demandes" editable="bottom"  colors="blue:state==True" toolbar="1">
					<field name="doc_ref" readonly="1"/>
					<field name="employe_id" widget="selection"/>
					<field name="demande"/>
					<field name="date"/>
					<field name="start_date"/>
					<field name="end_date"/>
					<field name="reason"/>
					<field name="adress"/>
					<field name="state"/>
					<button name="print_report" string="Print" type="object" icon="gtk-print"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="act_demande_view">
			<field name="name">Demandes</field>
			<field name="res_model">rh.demande</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,calendar,form</field>
			<field name="domain">[('state','=',True)]</field>
			<field name="usage">menu</field>
		</record>
		<record model="ir.actions.act_window" id="act_demande_view1">
			<field name="name">Demandes</field>
			<field name="res_model">rh.demande</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,calendar,form</field>
			<field name="usage">menu</field>
		</record>
			
		<menuitem name="Demandes" id="menu_demandes"  parent="rh_menu" action="act_demande_view" />
		<menuitem name="Bases de donnees" id="menu_base_donnee"  parent="rh_menu" />
		<menuitem name="toutes les demandes" id="menu_demandes1"  parent="menu_base_donnee" action="act_demande_view1" />
				
	</data>
</openerp>