<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
	<record id="rh_fonction_form_view" model="ir.ui.view">
		<field name="name">rh.fonction.form</field>
		<field name="model">rh.fonction</field>
		<field name="arch" type="xml">
			<form string="Fonctions" version="7.0">
				<sheet>
					<div class="oe_title oe_left">
						<h2>
							<label for="employe_id" class="oe_edit_only" /><field name="employe_id"/>
							
						</h2>
						<label for="code" /><field name="code" readonly="1"/>
					</div>
					<notebook>
						<page >
							<group >
								<field name="category_id" required="1" on_change="onchange_category(category_id)"/>
								<field name="corps_id" required="1" on_change="onchange_corps(corps_id)"/>
								<field name="cadre_id" required="1" on_change="onchange_cadre(cadre_id)"/>
							</group >
							<group>
								<group >
									<field name="grade_id" required="1" on_change="onchange_grade(grade_id)"/>
									<field name="grade_date" required="1"/>
								</group >
								<group >
									<field name="echelon_id" required="1" />
									<field name="echelon_date"  required="1"/>
								</group >
							</group >
							<group >
								<group >
									<field name="deduction" />
									<field name="ville_id" />
								</group >
								<group >
									<field name="state" />
									<field name="support" />
								</group >
							</group >
						</page>
						
					</notebook>
					<field name="notes" placeholder="Other Information ..." colspan="4"/>
					
				</sheet> 
			</form>
        </field>
    </record> 
   
    <record id="rh_fonction_tree_view" model="ir.ui.view" >
        <field name="name">rh.fonction.tree</field>
        <field name="model">rh.fonction</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Fonctions"  >
				<field name="grade_id"/>
				<field name="echelon_date"/>
				<field name="echelon_id"/>
				<field name="state"/>
			</tree>
        </field>
    </record>
	
	
    
	<record id="rh_fonction_act_view" model="ir.actions.act_window" >
        <field name="name">Fonctions</field>
        <field name="res_model">rh.fonction</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
		<field name="help" type="html"><p class="oe_view_nocontent_create"> Click to define a new record.</p></field>
				
    </record>
    
	
	<menuitem name="Fontions" id="fonctions_menu"  parent="menu_base_donnee" action="rh_fonction_act_view"/>

        
</data>
</openerp>