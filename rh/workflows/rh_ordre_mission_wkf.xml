<openerp>
    <data>
		<!-- Definitions -->
		<record model="workflow" id="rh_ordre_mission_wkf">
			<field name="name">rh.ordre_mission.wkf</field>
			<field name="osv">rh.ordre_mission</field>
			<field name="on_create">True</field>
		</record>
		
		<!-- Activities-->
		<record model="workflow.activity" id="act_rh_ordre_mission_wkf_draft">
			<field name="wkf_id" ref="rh_ordre_mission_wkf" />
			<field name="flow_start">True</field>
			<field name="name">Draft</field>
				</record>

		<record model="workflow.activity" id="act_rh_ordre_mission_wkf_validated">
			<field name="wkf_id" ref="rh_ordre_mission_wkf" />
			<field name="name">Validated</field>
			<field name="kind">function</field>
			<field name="action">om_validate()</field>
		</record>

		<record model="workflow.activity" id="act_rh_ordre_mission_wkf_confirmed">
			<field name="wkf_id" ref="rh_ordre_mission_wkf" />
			<field name="name">Confirmed</field>
			<field name="kind">function</field>
			<field name="action">om_confirm()</field>
		</record>

		<record model="workflow.activity" id="act_rh_ordre_mission_wkf_payed">
			<field name="wkf_id" ref="rh_ordre_mission_wkf" />
			<field name="name">Payed</field>
			<field name="kind">function</field>
			<field name="action">om_paid()</field>
			<field name="flow_stop">True</field>
		</record>
		<record model="workflow.activity" id="act_rh_ordre_mission_wkf_canceled">
			<field name="wkf_id" ref="rh_ordre_mission_wkf" />
			<field name="name">Canceled</field>
			<field name="kind">function</field>
			<field name="action">om_cancel()</field>
			<field name="flow_stop">True</field>
		</record>

		


		
		<!-- transitions -->
		<record model="workflow.transition" id="tr_rh_ordre_mission_wkf_draft_validated">
			<field name="act_from" ref="act_rh_ordre_mission_wkf_draft" />
			<field name="act_to" ref="act_rh_ordre_mission_wkf_validated" />
			<field name="signal">validate</field>
		</record>

		<record model="workflow.transition" id="tr_rh_ordre_mission_wkf_validated_confirmed">
			<field name="act_from" ref="act_rh_ordre_mission_wkf_validated" />
			<field name="act_to" ref="act_rh_ordre_mission_wkf_confirmed" />
			<field name="signal">confirm</field>
		</record>

		<record model="workflow.transition" id="tr_rh_ordre_mission_wkf_confirmed_payed">
			<field name="act_from" ref="act_rh_ordre_mission_wkf_confirmed" />
			<field name="act_to" ref="act_rh_ordre_mission_wkf_payed" />
			<field name="signal">paid</field>
		</record>
		
		<record model="workflow.transition" id="tr_rh_ordre_mission_wkf_confirmed_canceled">
			<field name="act_from" ref="act_rh_ordre_mission_wkf_confirmed" />
			<field name="act_to" ref="act_rh_ordre_mission_wkf_canceled" />
			<field name="signal">cancel</field>
		</record>
		
		<record model="workflow.transition" id="tr_rh_ordre_mission_wkf_draft_canceled">
			<field name="act_from" ref="act_rh_ordre_mission_wkf_draft" />
			<field name="act_to" ref="act_rh_ordre_mission_wkf_canceled" />
			<field name="signal">cancel</field>
		</record>
		
		<record model="workflow.transition" id="tr_rh_ordre_mission_wkf_validated_canceled">
			<field name="act_from" ref="act_rh_ordre_mission_wkf_validated" />
			<field name="act_to" ref="act_rh_ordre_mission_wkf_canceled" />
			<field name="signal">cancel</field>
		</record>
		
				

	

		

   </data>
</openerp>