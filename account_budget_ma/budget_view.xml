<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_budget_form" model="ir.ui.view">
            <field name="name">account.budget.form</field>
            <field name="model">account.budget</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="fiscalyear_id"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="general_account_id"/>
                            <field name="analytic_axis_id"/>
                            <field name="amount"/>
                            <field name="committed_amount"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="view_budget_tree" model="ir.ui.view">
            <field name="name">account.budget.tree</field>
            <field name="model">account.budget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="action_budget" model="ir.actions.act_window">
            <field name="res_model">account.budget</field>
            <field name="view_type">form</field>
            <field name="name">Budgets</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_main" name="Budget" parent="account.menu_finance" sequence="1"/>
        <menuitem action="action_budget" id="menu_budgets" name="Budgets" parent="menu_main"/>

    </data>
</openerp>
